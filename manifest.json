{
  "manifest_version": 3,
  "name": "TTS Voice Bridge",
  "version": "1.0.0",
  "description": "Convert text to speech for voice recognition systems like ChatGPT voice mode and Google voice search",

  "permissions": ["storage", "activeTab", "scripting"],

  "host_permissions": [
    "https://chat.openai.com/*",
    "https://www.google.com/*",
    "https://google.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://www.google.com/*",
        "https://google.com/*"
      ],
      "js": ["content.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "TTS Voice Bridge",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
